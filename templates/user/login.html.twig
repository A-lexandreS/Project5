{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}

{% block body %}

	<section id="login" class="container">
		<form action="{{ path('app_user_login') }}" method="post" class="loginForm">
			<h3>Connexion</h3>
			<label for="username">Pseudo</label>
			<input type="text" id="username" name="_username" placeholder="Entrer votre pseudo" value="{{ last_username }}"/>

			<label for="password">Mot de passe</label>
			<input type="password" id="password" name="_password" placeholder="Entrer votre mot de passe"/>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			{# If you want to control the URL the user is redirected to on success
			<input type="hidden" name="_target_path" value="/account"/> #}
			{% if error %}
        		<div class="errorsForm">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    		{% endif %}
			<button type="submit" id="submit">SE CONNECTER</button>
		</form>
	</section> 

{% endblock %}